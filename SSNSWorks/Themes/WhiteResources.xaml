                            <Setter TargetName="tcp" Property="TextElement.Foreground" Value="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource COLOR_토글버튼_MOUSEOVER_배경}" />
                            <Setter TargetName="bdButton" Property="BorderThickness" Value="1" />
                            <Setter TargetName="bdButton" Property="BorderBrush" Value="{StaticResource COLOR_토글버튼_MOUSEOVER_외각선}" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="{StaticResource COLOR_토글버튼_CHECKED_배경}" />
                            <Setter TargetName="bdButton" Property="BorderThickness" Value="1" />
                            <Setter TargetName="bdButton" Property="BorderBrush" Value="{StaticResource COLOR_토글버튼_CHECKED_외각선}" />
                            <!--<Setter TargetName="bdInnerShadowU" Property="BorderBrush"  Value="{DynamicResource black_color}" />
                            <Setter TargetName="bdInnerShadowD" Property="BorderBrush" Value="{DynamicResource InnerShadowN1}" />-->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--메뉴에서 사용되는 버튼 스타일 -->
    <Style x:Key="ssStyleToolBarButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource COLOR_배경}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="{DynamicResource COLOR_FONT_B2}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!--버튼 외각선--> 
                        <Border x:Name="bdButton" CornerRadius="1.5" BorderThickness="1" BorderBrush="{DynamicResource COLOR_배경}" TextBlock.TextAlignment="Center" Background="{TemplateBinding Background}" >
                            <Grid>
                                <!--버튼 외각선 내부 외각선 상단 하단-->
                                <!--<Border x:Name="bdInnerShadowU" BorderThickness="1" BorderBrush="{DynamicResource COLOR_테스트1}" />
                                <Border x:Name="bdInnerShadowD" BorderThickness="0,0,0,0" BorderBrush="{DynamicResource COLOR_테스트2}" />-->
                                <ContentPresenter x:Name="tcp" Content="{TemplateBinding Content}" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="tcp" Property="TextElement.FontFamily" Value="{Binding Path=(TextElement.FontFamily), RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="tcp" Property="TextElement.FontSize" Value="{Binding Path=(TextElement.FontSize), RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="tcp" Property="TextElement.Foreground" Value="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource COLOR_토글버튼_MOUSEOVER_배경}" />
                            <Setter TargetName="bdButton" Property="BorderThickness" Value="1" />
                            <Setter TargetName="bdButton" Property="BorderBrush" Value="{StaticResource COLOR_토글버튼_MOUSEOVER_배경}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource COLOR_토글버튼_CHECKED_배경}" />
                            <Setter TargetName="bdButton" Property="BorderThickness" Value="0" />
                            <!--<Setter TargetName="bdInnerShadowU" Property="BorderBrush"  Value="{DynamicResource black_color}" />
                            <Setter TargetName="bdInnerShadowD" Property="BorderBrush" Value="{DynamicResource InnerShadowN1}" />-->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--버튼등 내부에서 사용되는 스크롤 뷰어-->
    <Style x:Key="ss컨트롤내부ScrollViewer" TargetType="{x:Type ScrollViewer}">
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border Grid.Column="0" BorderThickness="1" BorderBrush="{StaticResource COLOR_배경}">
                            <ScrollContentPresenter />
                        </Border>
                        <ScrollBar x:Name="PART_VerticalScrollBar" 
                             Value="{TemplateBinding VerticalOffset}"
                             Maximum="{TemplateBinding ScrollableHeight}"
                             ViewportSize="{TemplateBinding ViewportHeight}"
                             Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                   Grid.Column="1"/>
                        <ScrollBar x:Name="PART_HorizontalScrollBar"
                             Orientation="Horizontal"
                             Grid.Row="1"
                             Grid.Column="0"
                             Value="{TemplateBinding HorizontalOffset}"
                             Maximum="{TemplateBinding ScrollableWidth}"
                             ViewportSize="{TemplateBinding ViewportWidth}"
                             Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--데이터그리드 기본-->
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="{StaticResource COLOR_배경}" />
        <!--<Setter Property="AlternationCount" Value="2" />-->
    </Style>

    <!--데이터그리드 줄 기본-->
    <Style x:Key="ssStyleDataGridRow" TargetType="{x:Type DataGridRow}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
    </Style>

    <!--데이터그리드 줄 색상변경 -->
    <Style x:Key="ssStyleDataGridRowStat" TargetType="{x:Type DataGridRow}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding STAT_B}" Value="-1"> <!--오류-->
                <Setter Property="Background" Value="#fde9d9"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_B}" Value="0"><!--대기-->
                <Setter Property="Background" Value="#ffffff"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_B}" Value="1"><!--진행중-->
                <Setter Property="Background" Value="#dce6f1"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_B}" Value="2"><!--재검요청-->
                <Setter Property="Background" Value="#e4dfec"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_B}" Value="9"><!--완료-->
                <Setter Property="Background" Value="#ebf1de"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_F}" Value="-1">
                <!--오류-->
                <Setter Property="Background" Value="#fde9d9"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_F}" Value="0">
                <!--대기-->
                <Setter Property="Background" Value="#ffffff"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_F}" Value="1">
                <!--진행중-->
                <Setter Property="Background" Value="#dce6f1"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_F}" Value="2">
                <!--재검요청-->
                <Setter Property="Background" Value="#e4dfec"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding STAT_F}" Value="9">
                <!--완료-->
                <Setter Property="Background" Value="#ebf1de"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!--데이터그리드 쉘 기본 -->
    <Style x:Key="ssStyleDataGridCell" TargetType="{x:Type DataGridCell}">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource COLOR_FONT_A}"/>
        <Setter Property="Block.TextAlignment" Value="Center"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <!--<Setter Property="Margin" Value="5,0,5,0" />-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                    <Border Height="20" BorderThickness="0" VerticalAlignment="Center"  BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource COLOR_그리드_MOUSEOVER_배경}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource COLOR_그리드_SELECTED_배경}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--데이터그리드 제목부분 -->
    <Style x:Key="ssStyleDataGridColumnHeader" TargetType="DataGridColumnHeader">
        <Setter Property="Height" Value="25"/>
        <Setter Property="Background" Value="{DynamicResource COLOR_그리드_제목배경}"/>
        <Setter Property="Foreground" Value="{DynamicResource COLOR_FONT_A}"/>
        <Setter Property="FontSize" Value="14" />
        <!--<Setter Property="BorderThickness" Value="0,0,1,1" />-->
        <Setter Property="BorderThickness" Value="0,0,1,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource COLOR_그리드_외각선}" />
        <Setter Property="TextBlock.TextAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

