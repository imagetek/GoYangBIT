    <!--윈도우창 스타일-->
    <Style x:Key="wDialogStyleNoButtons" TargetType="{x:Type Window}">
        <Setter Property="Foreground" Value="{DynamicResource COLOR_FONT_A}" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="ShowInTaskbar" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border Background="{DynamicResource COLOR_배경}" BorderThickness="1" BorderBrush="{DynamicResource COLOR_외각선}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="143*" />
                            </Grid.RowDefinitions>

                            <Grid x:Name="PART_TITLEBAR" Grid.Row="0" Background="{DynamicResource COLOR_배경}">
                                <TextBlock Text="{TemplateBinding Title}" FontWeight="Bold" TextWrapping="NoWrap" Foreground="{DynamicResource COLOR_제목글자색}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="16,0,50,0"  />
                                <Button x:Name="btnClose" Width="18" Height="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,16,0" Focusable="False" 
                                        Style="{DynamicResource ssCloseButton}">
                                    <Grid HorizontalAlignment="Center">
                                        <Line Stroke="{DynamicResource COLOR_창닫기}" StrokeThickness="2" X1="0" Y1="0" X2="10" Y2="9" />
                                        <Line Stroke="{DynamicResource COLOR_창닫기}" StrokeThickness="2" X1="10" Y1="0" X2="0" Y2="9" />
                                    </Grid>
                                </Button>
                            </Grid>

                            <Rectangle Fill="{DynamicResource COLOR_구분선A}" Grid.Row="1" />
                            <Rectangle Fill="{DynamicResource COLOR_구분선A}" Grid.Row="2"  />

                            <AdornerDecorator Grid.Row="3">
                                <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">-->
                                <ContentPresenter  />
                                <!--</ScrollViewer>-->
                            </AdornerDecorator>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--버튼 스타일-->
    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource COLOR_버튼_배경}" />
        <!--<Setter Property="FontSize" Value="13" />-->
        <Setter Property="Foreground" Value="{DynamicResource COLOR_FONT_A}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border x:Name="bdButton" CornerRadius="1.5" BorderThickness="0" TextBlock.TextAlignment="Center" Background="{TemplateBinding Background}">
                            <Grid>
                                <!--<Border x:Name="bdInnerShadowU" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource InnerShadowN1_10p}" 상단 외각선/>
                                <Border x:Name="bdInnerShadowD" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource bg_title_color}" 하단 외각선/>-->
                                <Border x:Name="bdOutShadow1" BorderThickness="1" BorderBrush="{DynamicResource COLOR_버튼_외각선}" />
                                <ContentPresenter x:Name="tcp" Content="{TemplateBinding Content}" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="tcp" Property="TextElement.FontFamily" Value="{Binding Path=(TextElement.FontFamily), RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="tcp" Property="TextElement.FontSize" Value="{Binding Path=(TextElement.FontSize), RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="tcp" Property="TextElement.Foreground" Value="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">                        
                            <Setter Property="Background" Value="{StaticResource COLOR_버튼_MOUSEOVER_배경}" />
                            <Setter TargetName="bdButton" Property="BorderThickness" Value="1" />
                            <Setter TargetName="bdButton" Property="BorderBrush" Value="{StaticResource COLOR_버튼_MOUSEOVER_외각선}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource COLOR_버튼_PRESSED_배경}" />
                            <Setter TargetName="bdButton" Property="BorderThickness" Value="1" />
                            <Setter TargetName="bdButton" Property="BorderBrush" Value="{StaticResource COLOR_버튼_PRESSED_외각선}" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="{StaticResource COLOR_FOCUSED}" />
                            <Setter TargetName="bdButton" Property="BorderThickness" Value="1" />
                            <Setter TargetName="bdButton" Property="BorderBrush" Value="{StaticResource COLOR_FOCUSED}" />
                        </Trigger>

                        <Trigger Property="Tag" Value="blink">
                            <Setter TargetName="bdButton" Property="BorderThickness" Value="1" />
                            <Setter TargetName="bdButton" Property="BorderBrush" Value="{StaticResource COLOR_BLINK}" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetName="bdButton" Storyboard.TargetProperty="BorderThickness" From="0" To="1.0" Duration="0:0:0.5" 
                                             RepeatBehavior="Forever" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard FillBehavior="Stop">
                                        <ThicknessAnimation
                                            Storyboard.TargetName="bdButton" Storyboard.TargetProperty="BorderThickness" To="1" Duration="0:0:0.5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

