                                        <Rectangle x:Name="tfocus" Width="14" Height="15" Stroke="{StaticResource COLOR_체크_MOUSEOVER_외각선2}" StrokeThickness="1.5" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                    <ContentPresenter x:Name="tcp" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </BulletDecorator.Bullet>
                    </BulletDecorator>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="tcp" Property="TextElement.FontFamily" Value="{Binding Path=(TextElement.FontFamily), RelativeSource={RelativeSource TemplatedParent}}" />
