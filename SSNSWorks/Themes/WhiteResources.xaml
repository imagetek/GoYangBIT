        <!--<Setter Property="FontSize" Value="13" />-->
        <Setter Property="Background" Value="{StaticResource COLOR_배경}" />
        <Setter Property="Foreground" Value="{StaticResource COLOR_FONT_A}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <BulletDecorator Background="Transparent">
                        <BulletDecorator.Bullet>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <Grid >
                                        <Border Width="14" Height="15" Margin="0,1,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1" 
                                                BorderBrush="{StaticResource COLOR_FONT_A}"/>
                                        <!--체크시 Points="0,1 2,5 6,0"-->
                                        <Polyline x:Name="tchecked" Width="10" Height="12" Margin="0,1,0,0" Points="0,1 4,11 10,1"
                                                  Stroke="{StaticResource COLOR_체크_선택_외각선}" StrokeThickness="2" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        <!--마우스오버시-->
                                        <Rectangle x:Name="tmouseover" Width="14" Height="15" Stroke="{StaticResource COLOR_체크_MOUSEOVER_외각선1}" StrokeThickness="1.5" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" />
