<UserControl x:Class="SSNSWorks.uc기본설정"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrls="clr-namespace:SSControlsNET;assembly=SSControlsNET"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:SSNSWorks"
             mc:Ignorable="d" d:DesignHeight="650" d:DesignWidth="950" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>        
        <StackPanel Grid.Row="0">
            <GroupBox Header="설치장소" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="BIT ID :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="txtBIT_ID" Width="200" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="정류장명 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="txtSTATION_NM" Width="300" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="모바일 정류장번호 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="txtMOBILE_NO" Width="200" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>
                        </StackPanel>                        
                    </StackPanel>
                </Grid>
 
            </GroupBox>
            <GroupBox Header="환경보드" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="시리얼포트 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <ComboBox x:Name="cmbENV2_PORT" Width="250" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />                            
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="통신속도 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox x:Name="txtENV_BAUD_RATE" Width="150" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Header="카메라설정" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="1번카메라(내부) :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <ComboBox x:Name="cmbCAM_NO1" Width="200" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox x:Name="cmbCAM_NO1_ROTATE" Width="80" Height="20" Margin="5,0,0,0" MaxDropDownHeight="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="2번카메라(충격) :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <ComboBox x:Name="cmbCAM_NO2" Width="150" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                            <ComboBox x:Name="cmbCAM_NO2_ROTATE" Width="80" Height="20" Margin="5,0,0,0" MaxDropDownHeight="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Header="서버정보" Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="서버 IP : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        <TextBox Name="txtSERVER_IPLIST" Text="" Width="500" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="서버 포트 : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        <TextBox Name="txtSERVER_PORTLIST" Text="" Width="500" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" />                        
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="(여러개의 서버IP , Port 입력시 | 로 구분해서 입력해주세요.)" Width="Auto" Height="Auto" Margin="150,0,0,0" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_닫기_PRESSED}"/>
                    </StackPanel>
                </StackPanel>              
            </GroupBox>
            <GroupBox Header="FTP정보" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="FTP 종류 : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <ComboBox x:Name="cmbFTP_GBN" Width="250" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="FTP IP : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="txtFTP_IP" Text="" Width="250" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="아이디 : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="txtFTP_ID" Text="" Width="250" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>                            
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="FTP 포트 : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="txtFTP_PORT" Text="" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="비밀번호 : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <PasswordBox Name="txtFTP_PWD" Width="250" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" HorizontalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Header="HTTP정보" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="HTTP IP : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="txtHTTP_IP" Text="" Width="250" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="HTTP Port : " Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="txtHTTP_PORT" Text="" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>


        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="btn설정저장" Content="설정저장" Width="60" Height="25" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btn설정저장_Click"/>
            <!--<Button x:Name="btn설정삭제" Content="설정삭제" Width="60" Height="25" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btn설정삭제_Click"/>-->
        </StackPanel>
        <!--<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="(설정값 우선순위 ▷ 설정파일 , DB 순 입니다 , 설정삭제 시 설정파일이 제거됩니다.)" Width="Auto" Height="Auto" Margin="0,0,5,0" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
        </StackPanel>-->

    </Grid>
</UserControl>
