<UserControl x:Class="BitView.uc하단Horizontal_HD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:ctrls="clr-namespace:SSControlsNET;assembly=SSControlsNET" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BitView"                          
             mc:Ignorable="d" TextOptions.TextFormattingMode="Ideal" TextOptions.TextRenderingMode="Auto"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" 
             PreviewMouseLeftButtonDown="UserControl_PreviewMouseLeftButtonDown"
             Width="500"
             Height="580"
             Padding="0 5 0 0"
             >
    <!--<UserControl.Background>
        <ImageBrush ImageSource="/SSResource;component/images/EPD/고장신고H.png"/>
    </UserControl.Background>-->
    <!--<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
        </Grid>
        <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,0,0" Width="40">
            <TextBlock x:Name="txt버전" Text="v.01" TextAlignment="Right" Width="30" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="10pt" FontWeight="Bold" FontFamily="{DynamicResource KoPubDotum}" Foreground="Black"/>
        </Grid>

    </Grid>-->
    <Border         
            BorderBrush="Black"
        BorderThickness="1 0 0 0"
            Height="580"            
        VerticalAlignment="Top"
            
            >
        <StackPanel Orientation="Vertical" >
            
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="시정소식"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="24"
                               FontWeight="Bold" 
                               Height="35"
                               Padding="0 5 0 0"/>
                <Border  
                         BorderBrush="Black" 
                         BorderThickness="1"
                         Width="480"
                         Height="320">
                    
                    <Image x:Name="promotionImage"
                        Height="320"
                           Width="480"
                           Stretch="Fill">
                       
                    </Image>                    
                </Border>
            </StackPanel>           
            
            <StackPanel Orientation="Vertical" Width="480" Margin="0 5 0 0" >
                <!--<TextBlock Text="대기 환경정보"
                           TextAlignment="Center"
                           FontSize="26"
                           FontWeight="Bold" />-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.ColumnSpan="4"
                            Grid.RowSpan="4"                        
                            BorderThickness="1"
                            BorderBrush="Black">           
                        
                    </Border>
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="구분"
                           BorderBrush="Black"
                           BorderThickness="1 1 1 1"
                           FontSize="16"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFB1B1B1"
                           FontWeight="SemiBold" />
                    <StackPanel Orientation="Vertical"
                                Grid.Row="0"
                                Grid.Column="1"
                                Background="#FFB1B1B1">
                        <Label BorderBrush="Black"
                               BorderThickness="0 1 1 0"
                               FontSize="12"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               Height="25"
                               Padding="0"
                               >
                            <Label.Content>
                                <TextBlock Text="미세먼지"
                                           TextWrapping="Wrap"
                                           FontWeight="SemiBold"/>
                            </Label.Content>
                        </Label>
                        <Label Content="(µg/m³)"
                               BorderBrush="Black"
                               BorderThickness="0 0 1 1"
                               FontSize="13"
                               VerticalContentAlignment="Top"
                               HorizontalContentAlignment="Center"
                               Height="25"
                               Padding="0"
                               FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical"
                                Grid.Row="0"
                                Grid.Column="2"
                                Background="#FFB1B1B1">
                        <!--<Label 
                               BorderBrush="Black"
                               BorderThickness="0 1 1 0"
                               FontSize="12"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               Height="25"
                               Padding="0">
                            <Label.Content>
                                <TextBlock Text="초"
                                           TextWrapping="Wrap"
                                           FontWeight="SemiBold"/>
                            </Label.Content>
                        </Label>-->
                        <Label Content="초미세먼지"
                               BorderBrush="Black"
                               BorderThickness="0 1 1 0"
                               FontSize="12"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               Height="25"
                               Padding="0"
                               Margin="0"
                               FontWeight="SemiBold"/>
                        <Label Content="(µg/m³)"
                               BorderBrush="Black"
                               BorderThickness="0 0 1 1"
                               FontSize="13"
                               VerticalContentAlignment="Top"
                               HorizontalContentAlignment="Center"
                               Height="25"
                               Padding="0"
                               FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                Grid.Row="0"
                                Grid.Column="3"
                                Background="#FFB1B1B1">
                        <Label Content="오존"
                               BorderBrush="Black"
                               BorderThickness="0 1 1 0"
                               FontSize="12"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               Height="25"
                               Padding="0"
                               FontWeight="SemiBold">                            
                        </Label>
                        <Label Content="(PPM)"
                            BorderBrush="Black"
                               BorderThickness="0 0 1 1"
                               FontSize="12"
                               VerticalContentAlignment="Top"
                               HorizontalContentAlignment="Center"
                               Height="25"
                               Padding="0"
                               FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!--row 1-->
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="기준"
                           BorderBrush="Black"
                           BorderThickness="1 0 1 1"
                           FontSize="16"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFECECEC"
                           FontWeight="SemiBold" />
                    <Label x:Name="FineDustBase"
                        Grid.Row="1"
                           Grid.Column="1"                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                    <Label x:Name="UltraFineDustBase"
                        Grid.Row="1"
                           Grid.Column="2"
                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                    <Label x:Name="OzoneBase"
                        Grid.Row="1"
                           Grid.Column="3"                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                    <!--row 2-->
                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Content="측정값"
                           BorderBrush="Black"
                           BorderThickness="1 0 1 1"
                           FontSize="15"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFD2D2D2"
                           FontWeight="SemiBold" 
                           Padding="0"/>
                    <Label x:Name="FineDustValue"
                        Grid.Row="2"
                           Grid.Column="1"
                           Background="#FFECECEC"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center" />
                    <Label x:Name="UltraFineDustValue"
                        Grid.Row="2"
                           Grid.Column="2"
                           Background="#FFECECEC"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center" />
                    <Label x:Name="OzoneValue"
                        Grid.Row="2"
                           Grid.Column="3"
                           Background="#FFECECEC"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"                           
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"/>
                    <!--row 3-->
                    <Label Grid.Row="3"
                           Grid.Column="0"
                           Content="상태"
                           BorderBrush="Black"
                           BorderThickness="1 0 1 1"
                           FontSize="16"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFECECEC"
                           FontWeight="SemiBold" />
                    <Label x:Name="FineDustIndex"
                        Grid.Row="3"
                           Grid.Column="1"
                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="20"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                    <Label x:Name="UltraFineDustIndex"
                        Grid.Row="3"
                           Grid.Column="2"
                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="20"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                    <Label x:Name="OzoneIndex"
                        Grid.Row="3"
                           Grid.Column="3"
                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="20"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                </Grid>
            </StackPanel>
        </StackPanel>
        
    </Border>
</UserControl>
