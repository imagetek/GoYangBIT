<UserControl x:Class="BitView.ucBIT설정Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrls="clr-namespace:SSControlsNET;assembly=SSControlsNET"
             xmlns:local="clr-namespace:BitView"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="950" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <TabControl x:Name="tabMain" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="tabMain_SelectionChanged">
            <TabItem x:Name="tab메인" Header="기본설정" Tag="1">
                <local:uc기본설정 x:Name="_u기본" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                               />
            </TabItem>
            <!--<TabItem x:Name="tab화면" Header="화면설정" Tag="2">
                <local:uc화면설정 x:Name="_u화면" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>-->
            <TabItem x:Name="tab프로그램" Header="프로그램설정" Tag="3">
                <local:uc프로그램설정 x:Name="_u프로그램" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
            <TabItem x:Name="tab기능" Header="BIT설정" Tag="4">
                <local:ucBIT기능설정 x:Name="_u기능" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
            <!--<TabItem x:Name="tabWebCamera"
                     Header="Web Camera"
                     Tag="5">
                <web:WebCameraControl x:Name="_uCamera"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch" />
            </TabItem>-->
        </TabControl>
    </Grid>
</UserControl>
