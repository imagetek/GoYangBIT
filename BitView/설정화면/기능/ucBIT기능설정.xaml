<UserControl x:Class="BitView.ucBIT기능설정"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:ctrls="clr-namespace:SSControlsNET;assembly=SSControlsNET"
             xmlns:local="clr-namespace:BitView"
             mc:Ignorable="d" d:DesignHeight="650" d:DesignWidth="950" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <GroupBox Header="BIT설정" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="볼륨 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <toolkit:DoubleUpDown x:Name="nVolume" Width="55" Height="Auto" Margin="5,0,0,0" Minimum="0" Maximum="10" VerticalAlignment="Center" CultureInfo="ko-KR" InputScope="Number" ParsingNumberStyle="Integer" TextAlignment="Center" />
                            <TextBlock Text="(0~10)" Width="Auto" Height="Auto" Margin="5,0,0,0" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>
                        <!--<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="폰트 크기 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <RadioButton x:Name="rbFontSize0" Content="작음" Tag="0" GroupName="gnFont" Width="Auto" Height="Auto" Margin="5,3,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>
                            <RadioButton x:Name="rbFontSize1" Content="보통" Tag="1" GroupName="gnFont" Width="Auto" Height="Auto" Margin="5,3,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>
                            <RadioButton x:Name="rbFontSize2" Content="큼" Tag="2" GroupName="gnFont" Width="Auto" Height="Auto"  Margin="5,3,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>
                        </StackPanel>-->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="상태보고 간격 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="StateSendPeriod" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                            <TextBlock Text="(초)" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>                            
                        </StackPanel>
                        <!--<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="시정홍보음성 표출여부 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <CheckBox x:Name="PromoteSoundPlayYN" Content="체크시 표출" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="외국어 정보 표출 여부 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <CheckBox x:Name="ForeignDisplayYN" Content="체크시 표출" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                        </StackPanel>-->
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="BIT정렬방식 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <ComboBox x:Name="BITOrderGBN" Width="150" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                        </StackPanel>
                        <!--<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Webcam캡쳐 전송간격 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="WebcamSendPeriod" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                            <TextBlock Text="(초)" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="스크린캡쳐 전송간격 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="ScreenCaptureSendPeriod" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                            <TextBlock Text="(초)" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>-->
                        <!--<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="시범운영중 표출여부 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <CheckBox x:Name="TestOperationDisplayYN" Content="체크시 표출" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="외국어 정보 표출 시간 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="ForeignDisplayTime" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                            <TextBlock Text="(초)" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>-->


                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Header="잠시후도착" Grid.Row="0" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="조건 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <ComboBox x:Name="ArriveSoonGBN" Width="200" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="시간 조건 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="ArriveSoonTimeGBN" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                            <TextBlock Text="(초) 미만일 경우 잠시후 도착 표출" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5,0,0">
                            <TextBlock Text="Promotion refresh :"
                                       Width="150"
                                       Height="Auto"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource COLOR_FONT_B1}" />
                            <TextBox Name="PromotionRefresh"
                                     Width="55"
                                     Height="Auto"
                                     Margin="5,0,0,0"
                                     TextAlignment="Center"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource COLOR_FONT_A}"
                                     ctrls:TextBoxMaskBehavior.Mask="Integer" />
                            <TextBlock Text="(분) "
                                       Width="Auto"
                                       Height="Auto"
                                       TextAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource COLOR_FONT_B1}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="정류장 조건 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="ArriveSoonStationGBN" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                            <TextBlock Text="(개소) 미만일 경우 잠시후 도착 표출" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5,0,0">
                            <TextBlock Text="Arrival info refresh :"
                                       Width="150"
                                       Height="Auto"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource COLOR_FONT_B1}" />
                            <TextBox Name="BusArrivalRefresh"
                                     Width="55"
                                     Height="Auto"
                                     Margin="5,0,0,0"
                                     TextAlignment="Center"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource COLOR_FONT_A}"
                                     ctrls:TextBoxMaskBehavior.Mask="Integer" />
                            <TextBlock Text="(초)"
                                       Width="Auto"
                                       Height="Auto"
                                       TextAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource COLOR_FONT_B1}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Header="환경보드 관련" Grid.Row="0" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="모니터On시간:" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="MonitorOnTime" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="FAN동작온도Max :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="FANMaxTemp" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer" IsEnabled="False"/>                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="히터동작온도Max :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="HeaterMaxTemp" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>                        
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="충격감지값 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="ShockDetectValue" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="동작감지센서 사용여부 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <CheckBox x:Name="UseDetectSensor" Content="체크시 사용" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="모니터Off시간:" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="MonitorOffTime" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="FAN동작온도Min :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="FANMinTemp" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="히터동작온도Min :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="HeaterMinTemp" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                        </StackPanel>
                       
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="동작감지센서 사용기간 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <TextBox Name="DetectSensorServiceTime" Width="55" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                            <TextBlock Text="(초)" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>           
           
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="btn설정저장" Content="설정저장" Width="60" Height="25" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btn설정저장_Click"/>
            <!--<Button x:Name="btn설정삭제" Content="설정삭제" Width="60" Height="25" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btn설정삭제_Click"/>-->
        </StackPanel>
        <!--<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="(설정값 우선순위 ▷ 설정파일 , DB 순 입니다 , 설정삭제 시 설정파일이 제거됩니다.)" Width="Auto" Height="Auto" Margin="0,0,0,0" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
        </StackPanel>-->
    </Grid>
</UserControl>
