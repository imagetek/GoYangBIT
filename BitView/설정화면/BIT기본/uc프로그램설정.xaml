<UserControl x:Class="BitView.uc프로그램설정"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:ctrls="clr-namespace:SSControlsNET;assembly=SSControlsNET"
             xmlns:local="clr-namespace:BitView"
             mc:Ignorable="d" d:DesignHeight="650" d:DesignWidth="950" d:Background="AliceBlue"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>        
        <StackPanel Grid.Row="0">
            <GroupBox Header="프로그램 설정" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="기록 보관일 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <toolkit:DoubleUpDown x:Name="nLOGSAVE_DAY" Width="50" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" CultureInfo="ko-KR" InputScope="Number" ParsingNumberStyle="Integer" TextAlignment="Center" />
                            <TextBlock Text="(일)" Width="Auto" Height="Auto" TextAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="기록 보관비율 :" Width="150" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                            <toolkit:DoubleUpDown x:Name="nLOGSAVE_PERCENT" Width="50" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" CultureInfo="ko-KR" InputScope="Number" ParsingNumberStyle="Integer" TextAlignment="Center"/>
                            <TextBlock Text="(%)" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                        </StackPanel>                   
                    </StackPanel>
                </Grid>
                

            </GroupBox>
            <DockPanel Margin="10"
                       VerticalAlignment="Center">
                <TextBlock Text="Display Layout: "
                           Padding="0"
                           Margin="0" />
                <RadioButton VerticalContentAlignment="Center"
                             Margin="10 0"
                             Checked="RadioButton_Checked"
                             Name="vertical">Vertical</RadioButton>
                <RadioButton VerticalContentAlignment="Center"
                             Checked="RadioButton_Checked"
                             Name="horizontal">Horizontal</RadioButton>
            </DockPanel>

            <DockPanel Margin="10"
                       VerticalAlignment="Center">
                <TextBlock Text="Bit energy type: "
                           Padding="0"
                           Margin="0" />
                <RadioButton VerticalContentAlignment="Center"
                             Margin="10 0"
                             Checked="RadioButton_Checked"
                             Name="solar">Solar</RadioButton>
                <RadioButton VerticalContentAlignment="Center"
                             Checked="RadioButton_Checked"
                             Name="electric">Electric</RadioButton>
            </DockPanel>

            <DockPanel Margin="10"
                       VerticalAlignment="Center">
                <TextBlock Text="Display bus route: "
                           Padding="0"
                           Margin="0" />
                <RadioButton VerticalContentAlignment="Center"
                             Margin="10 0"
                             Checked="RadioButton_Checked"
                             Name="showRoute">Show</RadioButton>
                <RadioButton VerticalContentAlignment="Center"
                             Checked="RadioButton_Checked"
                             Name="hideRoute">Hide</RadioButton>
            </DockPanel>

            <DockPanel Margin="10"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left">
               
                    <TextBlock Text="Max route count: "
                               Padding="0"
                               Margin="0" />
                    <TextBox x:Name="maxRouteCount"
                             Width="30"
                             Height="20"
                             Margin="10 0" 
                             />
               
            </DockPanel>



        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="btn설정저장" Content="설정저장" Width="60" Height="25" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btn설정저장_Click"/>
        </StackPanel>


    </Grid>
</UserControl>
