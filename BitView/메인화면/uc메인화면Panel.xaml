<UserControl x:Class="BitView.uc메인화면Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BitView"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="950" d:Background="AntiqueWhite"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="150" MaxHeight="350" MinHeight="125" />
            <RowDefinition Height="30" />
            <RowDefinition Height="5"/>
            <RowDefinition  />
        </Grid.RowDefinitions>
        <TextBlock Text="BIT프로그램 상태정보" Grid.Row="0" FontSize="18" TextAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource COLOR_FONT_A}" VerticalAlignment="Center" />
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,10,0,0" Grid.Column="0">
                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                    <TextBlock Text="정류장정보 :" Width="100" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                    <TextBlock x:Name="txt정류장정보" Width="Auto" Height="Auto" Margin="5,0,0,0" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                    <TextBlock Text="OS :" Width="100" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                    <TextBlock x:Name="txtOS이름" Width="Auto" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                    <TextBlock x:Name="txtOS정보" Width="Auto" Height="Auto" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                    <TextBlock Text="MEMORY :" Width="100" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                    <Grid Margin="10,0,0,0" >
                        <ProgressBar x:Name="p메모리" Width="200" Height="20" Value="1" Foreground="DodgerBlue" Maximum="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txt메모리" Text="1" Width="Auto" Height="Auto" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                    </Grid>
                    <TextBlock x:Name="txt메모리정보" Width="Auto" Height="Auto" Margin="10,0,0,0" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="0,10,0,0" Grid.Column="1">
                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                    <TextBlock Text="" Width="100" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>                    
                </StackPanel>
                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                    <TextBlock Text="CPU :" Width="100" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                    <Grid Margin="10,0,0,0">
                        <ProgressBar x:Name="pCPU" Width="200" Height="20" Value="1" Foreground="DodgerBlue" Maximum="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtCPU" Text="1" Width="Auto" Height="Auto" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                    </Grid>
                    <TextBlock x:Name="txtCPU이름" Width="Auto" Height="Auto" Margin="10,0,0,0" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                    <TextBlock Text="사용가능DISK :" Width="100" Height="Auto" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                    <Grid Margin="10,0,0,0" >
                        <ProgressBar x:Name="p디스크" Width="200" Height="20" Value="1" Foreground="DodgerBlue" Maximum="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txt디스크" Text="1" Width="Auto" Height="Auto" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}"/>
                    </Grid>
                    <TextBlock x:Name="txt디스크정보" Width="Auto" Height="Auto" Margin="10,0,0,0" TextAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" >
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <Border BorderThickness="1 0 0 0 " />
                    <TextBlock Text="Main V"></TextBlock>
                    <TextBlock x:Name="mainVoltageTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Main A"></TextBlock>
                    <TextBlock x:Name="mainCurrentTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Batt A"></TextBlock>
                    <TextBlock x:Name="batteryCurrentTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Solar V"></TextBlock>
                    <TextBlock x:Name="solarVoltageTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Solar A"></TextBlock>
                    <TextBlock x:Name="solarCurrentTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Temp"></TextBlock>
                    <TextBlock x:Name="tempTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Temp2"></TextBlock>
                    <TextBlock x:Name="temp2Txt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Humidity"></TextBlock>
                    <TextBlock x:Name="humidityTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Bright"></TextBlock>
                    <TextBlock x:Name="brightnessTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Shock"></TextBlock>
                    <TextBlock x:Name="shockTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Door"></TextBlock>
                    <TextBlock x:Name="doorTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="F.Light"></TextBlock>
                    <TextBlock x:Name="frontLightTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="B.%"></TextBlock>
                    <TextBlock x:Name="battPercentTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
                <StackPanel Orientation="Vertical" Margin="10 5">
                    <TextBlock Text="Batt Remain"></TextBlock>
                    <TextBlock x:Name="battRemainTxt" Text="?" TextAlignment="Center"/>
                </StackPanel>
                <Border BorderThickness="1 0 0 0 " BorderBrush="Black" Margin="0 9"></Border>
            </StackPanel>

        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" >
            <Button x:Name="registerScheduledTask" Width="150" Content="Register Agent" Click="registerScheduledTask_Click" Margin="10, 0" />
            <Button x:Name="toggleScheduledTask"   Width="100" Content="Enable Agent"   Click="toggleScheduledTask_Click"   Margin="10, 0" />
        </StackPanel>
        <GridSplitter BorderBrush="{DynamicResource COLOR_구분선B}" BorderThickness="1" Background="{DynamicResource COLOR_구분선C}"
                                      ResizeDirection="Rows" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext" />

        <DataGrid x:Name="dg로그" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single"  CanUserAddRows="False" SelectionUnit="FullRow" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled"
                  Grid.Row="4" Margin="5" BorderThickness="0" ColumnHeaderStyle="{DynamicResource ssStyleDataGridColumnHeader}" CellStyle="{DynamicResource ssStyleDataGridCell}" RowStyle="{DynamicResource ssStyleDataGridRow}" 
                  VerticalGridLinesBrush="{DynamicResource COLOR_구분선B}" HorizontalGridLinesBrush="{DynamicResource COLOR_구분선C}" >
                            <DataGrid.Columns >
                                <DataGridTextColumn Header="종류" Binding="{Binding 오류LV}" Width="Auto" />
                                <DataGridTextColumn Header="등록일시" Binding="{Binding 등록일시}" Width="Auto" />
                                <DataGridTextColumn Header="내용" Binding="{Binding 로그내용}" Width="Auto" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <!--<Setter Property="TextAlignment" Value="Center" />-->
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
        <StackPanel Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal"
                        Width="250">
                <!--<TextBlock                            
                           Text="Serial port error count today: "
                           VerticalAlignment="Center"
                            FontSize="14"/>
                <TextBlock x:Name="spErrorCountTxt"
                           Width="20"
                           Text="0"
                           VerticalAlignment="Center"
                           Margin="10 0"
                           FontSize="14"/>-->
            </StackPanel>
            
            <Button x:Name="btn초기화" Content="초기화" Width="60" Height="20" Margin="0,5,25,0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="btn초기화_Click"/>
            <CheckBox x:Name="otherCheck"
                      IsChecked="True"
                      Margin="10 7"
                      >Other</CheckBox>
            <CheckBox x:Name="boardCheck" 
                      IsChecked="True" 
                      Margin="10 7"
                      >Board</CheckBox>
            <CheckBox x:Name="businfoCheck"
                      IsChecked="True"
                      Margin="10 7"
                      >Bus info</CheckBox>
            <Button x:Name="filterLogBtn"
                    Margin="30 7"
                    Width="50"
                    Height="20"
                    Click="filterLogBtn_Click">Filter</Button>
        </StackPanel>
        
    </Grid>
</UserControl>
