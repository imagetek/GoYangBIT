    <Border         
            BorderBrush="Black"
        BorderThickness="0 5 0 0"
            Height="380"
            Background="White"
            VerticalAlignment="Top"
            Padding="5 15 0 0">
        <StackPanel Orientation="Horizontal" >
            
                <StackPanel Orientation="Vertical">
                <TextBlock Text="날씨 정보"
                               TextAlignment="Center"
                               FontSize="26"
                               FontWeight="Bold" />
                <Border  
                         BorderBrush="Black" 
                         BorderThickness="1"
                         Width="480"
                         Height="320">
                    
                    <!--<Image x:Name="promotionImage"
                        Height="320"
                           Width="480"
                           Stretch="Fill">
                       
                    </Image>-->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Width="480"
                                    Height="140">
                            <StackPanel VerticalAlignment="Center">
                                <Label x:Name="todayHighTemp"
                                       Content="30 °C"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       Width="180"
                                       FontSize="30" />
                                <Label x:Name="todayLowTemp"
                                       Content="15 °C"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       Width="180"
                                       FontSize="30" />
                            </StackPanel>
                            
                            <Image x:Name="todayWeatherImage"
                                   Width="90">                              
                            </Image>
                            <StackPanel Width="210">
                              
                                    <!--<Image x:Name="tempImage"
                                           Width="40"
                                           Height="50"
                                           >
                                        <Image.Source>
                                            <FormatConvertedBitmap  Source="/SSResource;component/images/날씨/temp.png" DestinationFormat="Gray8"/>
                                        </Image.Source>                                       
                                    </Image>-->
                                    
                                
                                <Label Content="25 °C"
                                       x:Name="tempValue"
                                       FontSize="40"
                                       Height="80"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Bottom" />
                                <Label Content="Cloudy"
                                       Height="80"
                                       x:Name="weatherText"
                                       FontSize="30"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Top" />
                            </StackPanel>
                        </StackPanel>
                        <Border BorderBrush="Black" BorderThickness="0 0 0 1" Width="460"/>
                        <StackPanel Orientation="Horizontal"
                                    Width="480"
                                    Height="180">
                            
                            <!--DAY ONE-->
                            <StackPanel Width="160">
                                <Label x:Name="dayOneDay"
                                    Content="Day 1" 
                                       HorizontalContentAlignment="Center"
                                       FontSize="23"
                                       Padding="0 7 0 0"/>
                                <Image x:Name="dayOneImage"
                                       Height="90"
                                       Width="60">
                                    
                                </Image>
                                <Label x:Name="dayOneHighTemp"
                                    Content="15 °C"
                                       HorizontalContentAlignment="Center"
                                       FontSize="20"
                                       Padding="0"/>
                                <Label x:Name="dayOneLowTemp"
                                    Content="5 °C"
                                       HorizontalContentAlignment="Center"
                                       FontSize="20"
                                       Padding="0" />
                            </StackPanel>
                            <Border BorderBrush="Black"
                                    Height="160"
                                    BorderThickness="1 0 0 0" />
                            
                            <!--DAY TWO-->
                            <StackPanel Width="160">
                                <Label x:Name="dayTwoDay"
                                    Content="Day 2"
                                       HorizontalContentAlignment="Center"
                                       FontSize="23"
                                       Padding="0 7 0 0" />
                                <Image x:Name="dayTwoImage"
                                       Height="90"
                                       Width="60">

                                </Image>
                                <Label x:Name="dayTwoHighTemp"
                                    Content="15 °C"
                                       HorizontalContentAlignment="Center"
                                       FontSize="20"
                                       Padding="0" />
                                <Label x:Name="dayTwoLowTemp"
                                    Content="5 °C"
                                       HorizontalContentAlignment="Center"
                                       FontSize="20"
                                       Padding="0" />
                            </StackPanel>
                            <Border BorderBrush="Black"
                                    Height="160"
                                    BorderThickness="1 0 0 0" />
                            
                            <!--DAY THREE-->
                            <StackPanel Width="160">
                                <Label x:Name="dayThreeDay"
                                    Content="Day 3"
                                       HorizontalContentAlignment="Center"
                                       FontSize="23"
                                       Padding="0 7 0 0" />
                                <Image x:Name="dayThreeImage"
                                       Height="90"
                                       Width="60">

                                </Image>
                                <Label  x:Name="dayThreeHighTemp" 
                                    Content="15 °C"
                                       HorizontalContentAlignment="Center"
                                       FontSize="20"
                                       Padding="0" />
                                <Label x:Name="dayThreeLowTemp"
                                    Content="5 °C"
                                       HorizontalContentAlignment="Center"
                                       FontSize="20"
                                       Padding="0" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>           
            
            <StackPanel Orientation="Vertical" Width="215" Margin="5 0 0 0" >
                <TextBlock Text="대기 환경정보"
                           TextAlignment="Center"
                           FontSize="26"
                           FontWeight="Bold" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition Height="80" />
                        <RowDefinition Height="80" />
                        <RowDefinition Height="80" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="55" />
                        <ColumnDefinition Width="55" />
                        <ColumnDefinition Width="55" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.ColumnSpan="4"
                            Grid.RowSpan="4"
                        
                            BorderThickness="1"
                            BorderBrush="Black">           
                        
                    </Border>
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="구분"
                           BorderBrush="Black"
                           BorderThickness="1 1 1 1"
                           FontSize="16"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFB1B1B1"
                           FontWeight="SemiBold" />
                    <StackPanel Orientation="Vertical"
                                Grid.Row="0"
                                Grid.Column="1"
                                Background="#FFB1B1B1">
                        <Label BorderBrush="Black"
                               BorderThickness="0 1 1 0"
                               FontSize="12"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               Height="40"
                               Padding="0"
                               >
                            <Label.Content>
                                <TextBlock Text="미세먼지"
                                           TextWrapping="Wrap"
                                           FontWeight="SemiBold"/>
                            </Label.Content>
                        </Label>
                        <Label Content="(µg/m³)"
                               BorderBrush="Black"
                               BorderThickness="0 0 1 1"
                               FontSize="13"
                               VerticalContentAlignment="Top"
                               HorizontalContentAlignment="Center"
                               Height="40"
                               Padding="0"
                               FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical"
                                Grid.Row="0"
                                Grid.Column="2"
                                Background="#FFB1B1B1">
                        <Label 
                               BorderBrush="Black"
                               BorderThickness="0 1 1 0"
                               FontSize="12"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               Height="30"
                               Padding="0">
                            <Label.Content>
                                <TextBlock Text="초"
                                           TextWrapping="Wrap"
                                           FontWeight="SemiBold"/>
                            </Label.Content>
                        </Label>
                        <Label Content="미세먼지"
                               BorderBrush="Black"
                               BorderThickness="0 0 1 0"
                               FontSize="12"
                               VerticalContentAlignment="Top"
                               HorizontalContentAlignment="Center"
                               Height="15" 
                               Margin="0"
                               Padding="0"
                               FontWeight="SemiBold"/>
                        <Label Content="(µg/m³)"
                               BorderBrush="Black"
                               BorderThickness="0 0 1 1"
                               FontSize="13"
                               VerticalContentAlignment="Top"
                               HorizontalContentAlignment="Center"
                               Height="35"
                               Padding="0"
                               FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                Grid.Row="0"
                                Grid.Column="3"
                                Background="#FFB1B1B1">
                        <Label Content="오존"
                               BorderBrush="Black"
                               BorderThickness="0 1 1 0"
                               FontSize="12"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               Height="40"
                               Padding="0"
                               FontWeight="SemiBold">                            
                        </Label>
                        <Label Content="(PPM)"
                            BorderBrush="Black"
                               BorderThickness="0 0 1 1"
                               FontSize="12"
                               VerticalContentAlignment="Top"
                               HorizontalContentAlignment="Center"
                               Height="40"
                               Padding="0"
                               FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!--row 1-->
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="기준"
                           BorderBrush="Black"
                           BorderThickness="1 0 1 1"
                           FontSize="16"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFECECEC"
                           FontWeight="SemiBold" />
                    <Label x:Name="FineDustBase"
                        Grid.Row="1"
                           Grid.Column="1"
                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                    <Label x:Name="UltraFineDustBase"
                        Grid.Row="1"
                           Grid.Column="2"
                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                    <Label x:Name="OzoneBase"
                        Grid.Row="1"
                           Grid.Column="3"                           
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                            />
                    <!--row 2-->
                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Content="측정값"
                           BorderBrush="Black"
                           BorderThickness="1 0 1 1"
                           FontSize="15"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFD2D2D2"
                           FontWeight="SemiBold" 
                           Padding="0"/>
                    <Label x:Name="FineDustValue"
                        Grid.Row="2"
                           Grid.Column="1"
                           Background="#FFECECEC"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center" />
                    <Label x:Name="UltraFineDustValue"
                        Grid.Row="2"
                           Grid.Column="2"
                           Background="#FFECECEC"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center" />
                    <Label x:Name="OzoneValue"
                        Grid.Row="2"
                           Grid.Column="3"
                           Background="#FFECECEC"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="18"                           
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"/>
                    <!--row 3-->
                    <Label Grid.Row="3"
                           Grid.Column="0"
                           Content="상태"
                           BorderBrush="Black"
                           BorderThickness="1 0 1 1"
                           FontSize="16"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Background="#FFECECEC"
                           FontWeight="SemiBold" />
                    <Label Grid.Row="3"
                           Grid.Column="1"
                           FontWeight="SemiBold"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="20"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center">
                        <TextBlock x:Name="FineDustIndex"
                                   TextWrapping="Wrap">매우나쁨</TextBlock>
                    </Label>
                    <Label Grid.Row="3"
                           Grid.Column="2"
                           FontWeight="SemiBold"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="20"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center">
                        <TextBlock x:Name="UltraFineDustIndex"
                                   TextWrapping="Wrap">매우나쁨</TextBlock>
                    </Label>
                    <Label Grid.Row="3"
                           Grid.Column="3"
                           FontWeight="SemiBold"
                           BorderBrush="Black"
                           BorderThickness="0 0 1 1"
                           FontSize="20"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center">
                        <TextBlock x:Name="OzoneIndex"
                                   TextWrapping="Wrap">매우나쁨</TextBlock>
                    </Label>
                </Grid>
            </StackPanel>
        </StackPanel>
        
    </Border>
</UserControl>
