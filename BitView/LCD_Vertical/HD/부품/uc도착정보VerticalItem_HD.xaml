<UserControl x:Class="BitView.uc도착정보VerticalItem_HD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrls="clr-namespace:SSControlsNET;assembly=SSControlsNET"
             xmlns:local="clr-namespace:BitView"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded"
             Height="110"
             Width="700">
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <!-- 종류 -->
            <ColumnDefinition Width="130"/>
            <!-- 노선번호 -->
            <ColumnDefinition Width="75"/>
            <!-- 예정 -->
            <ColumnDefinition Width="75"/>
            <!-- 좌석 -->
            <ColumnDefinition Width="320"/>
            <!-- 현위치  -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Gray"
                BorderThickness="0 0 1 0"
                Height="100"
                Grid.Column="0">
            <Grid x:Name="종류Grid"  HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
            
                <Image x:Name="img구분"
                       Width="90"
                       Height="90"                       
                       >
                    <Image.Source>
                        <FormatConvertedBitmap  Source="/SSResource;component/images/BIS/버스구분/가로/공항버스.png"
                                                DestinationFormat="Gray8" />
                    </Image.Source>
                </Image>
           
            
            <Image x:Name="img저상" Width="35" Height="35" Margin="0,0,-8,-6" HorizontalAlignment="Right" VerticalAlignment="Bottom" Source="/SSResource;component/images/EPD/저상버스.png"/>
            <!--<TextBlock x:Name="txt노선종류" Text="일반" Width="Auto" Height="Auto"  TextAlignment="Center" FontSize="14" FontWeight="Bold" FontFamily="{DynamicResource KoPubDotum}" Foreground="Black"/>-->
        </Grid>
        </Border>
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="0 0 1 0 ">
            <Grid x:Name="노선번호Grid"
                  
                  HorizontalAlignment="Center">

                <TextBlock x:Name="txt노선번호"
                           Text="M51272"
                           Width="120"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           FontSize="42"
                           FontWeight="Bold"
                           FontFamily="{DynamicResource KoPubDotum}"
                           Foreground="Black" />
                <StackPanel Orientation="Vertical"
                            Width="120"
                            x:Name="splongName">
                    <TextBlock x:Name="txt노선번호1"
                               Text="31-2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               TextAlignment="Center"
                               FontSize="42"
                               FontWeight="Bold"
                               FontFamily="{DynamicResource KoPubDotum}"
                               Foreground="Black"
                               Width="120" />
                    <TextBlock x:Name="txt노선번호2"
                               Text="(동충초등학교)"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               FontSize="32"
                               FontWeight="Bold"
                               FontFamily="{DynamicResource KoPubDotum}"
                               Foreground="Black"
                               Width="120" />
                </StackPanel>


            </Grid>
        </Border>
        
        <Grid Grid.Column="2" Grid.ColumnSpan="3">
            <TextBlock x:Name="noOperationStatus" Visibility="Visible"
                       Text="NO OPERATION"
                       TextAlignment="Center"
                       FontSize="40"
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>


        </Grid>
        <Border x:Name="예정Grid"
                Grid.Column="2"
                BorderBrush="Gray"
                BorderThickness="0 0 1 0"
                >
            <Grid >
                <Grid x:Name="timeLeftGrid"
                      Visibility="Hidden">

                    <StackPanel   VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Orientation="Horizontal">
                        <TextBlock x:Name="txt남은시간"
                                   Text="123"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   FontFamily="{DynamicResource KoPubDotum}"
                                   Foreground="Black" />
                        <TextBlock Text="분"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   FontFamily="{DynamicResource KoPubDotum}"
                                   Foreground="Black" />
                    </StackPanel>
                </Grid>
                <Grid x:Name="곧도착Grid"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Visibility="Visible">
                    <TextBlock Text="잠시후"
                               FontSize="24"
                               FontWeight="Bold"
                               FontFamily="{DynamicResource KoPubDotum}"
                               Foreground="Black" />
                </Grid>
            </Grid>
        </Border>

        <Border x:Name="좌석Grid" Grid.Column="3" BorderBrush="Gray" BorderThickness="0 0 1 0">
            <Grid >
                <StackPanel Orientation="Horizontal"
                            Width="60"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            >
                    <TextBlock x:Name="txt좌석수"
                               Text="123"
                               FontSize="28"
                               FontWeight="Bold"
                               FontFamily="{DynamicResource KoPubDotum}"
                               Foreground="Black"                               
                               Width="45"
                               TextAlignment="Center"
                               />
                    <TextBlock x:Name="seats"
                               Text="석"
                               FontSize="18"
                               FontWeight="Bold"                               
                               FontFamily="{DynamicResource KoPubDotum}"
                               Foreground="Black"                                                             
                               Width="15"
                               VerticalAlignment="Center"/>
                </StackPanel>

            </Grid>
        </Border >
       
        <Grid x:Name="현위치Grid" Grid.Column="4">
            <Image x:Name="img배경선" Width="285" Height="18" Margin="0,7,0,0" HorizontalAlignment="Center" Source="/SSResource;component/images/BIS/위치/점선H.png"/>
            <!--<Image x:Name="img현위치" Width="50"  Height="50" Margin="5,23,0,22" HorizontalAlignment="Left" Source="/SSResource;component/images/EPD/현위치H.png"/>-->
            <Border Width="50"
                    Height="50"
                    Margin="5,23,0,22"
                    HorizontalAlignment="Left"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="5"
                    Background="LightGray">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            >
                    <TextBlock Text="현"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="18"
                               ></TextBlock>
                    <TextBlock Text="위치"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="18"
                               ></TextBlock>
                </StackPanel>
               
            </Border>
            <Image x:Name="img위치정보" Width="Auto" Height="64" Margin="5,0,0,0" HorizontalAlignment="Left"/>

            <StackPanel x:Name="sp원" Orientation="Horizontal" VerticalAlignment="Center" Margin="55,7,0,0">
                <Image x:Name="img정류장1" Width="40" Height="40" Margin="0,0,0,0" HorizontalAlignment="Center" Source="/SSResource;component/images/BIS/위치/원.png"/>
                <Image x:Name="img정류장2" Width="40" Height="40" Margin="15,0,0,0" HorizontalAlignment="Center" Source="/SSResource;component/images/BIS/위치/원.png"/>
                <Image x:Name="img정류장3" Width="40" Height="40" Margin="15,0,0,0" HorizontalAlignment="Center" Source="/SSResource;component/images/BIS/위치/원.png"/>
                <Image x:Name="img정류장4" Width="40" Height="40" Margin="15,0,0,0" HorizontalAlignment="Center" Source="/SSResource;component/images/BIS/위치/원.png"/>
                <Image x:Name="img정류장5" Width="40" Height="40" Margin="15,0,0,0" HorizontalAlignment="Center" Source="/SSResource;component/images/BIS/위치/원.png"/>
            </StackPanel>
            <StackPanel x:Name="sp순번" Orientation="Horizontal" Margin="55,9,0,0" VerticalAlignment="Center">
                <TextBlock x:Name="txt정류장순번1" Text="" Width="30" Height="Auto" Margin="5,0,0,0" TextAlignment="Center" FontSize="20" FontWeight="Bold" FontFamily="{DynamicResource KoPubDotum}" Foreground="Black"/>
                <TextBlock x:Name="txt정류장순번2"
                           Text=""
                           Width="30"
                           Height="Auto"
                           Margin="25,0,0,0"
                           TextAlignment="Center"
                           FontSize="20" FontWeight="Bold" FontFamily="{DynamicResource KoPubDotum}" Foreground="Black"/>
                <TextBlock x:Name="txt정류장순번3"
                           Text=""
                           Width="30"
                           Height="Auto"
                           Margin="24,0,0,0"
                           TextAlignment="Center"
                           FontSize="20" FontWeight="Bold" FontFamily="{DynamicResource KoPubDotum}" Foreground="Black"/>
                <TextBlock x:Name="txt정류장순번4"
                           Text=""
                           Width="30"
                           Height="Auto"
                           Margin="25,0,0,0"
                           TextAlignment="Center"
                           FontSize="20" FontWeight="Bold" FontFamily="{DynamicResource KoPubDotum}" Foreground="Black"/>
                <TextBlock x:Name="txt정류장순번5"
                           Text=""
                           Width="30"
                           Height="Auto"
                           Margin="25,0,0,0"
                           TextAlignment="Center"
                           FontSize="20" FontWeight="Bold" FontFamily="{DynamicResource KoPubDotum}" Foreground="Black"/>
            </StackPanel>
            <StackPanel x:Name="sp위치" Orientation="Horizontal" VerticalAlignment="Center" Margin="50,0,0,0" >
                <Image x:Name="img버스위치1" Width="50" Height="50" Margin="5,0,0,0" HorizontalAlignment="Center" />
                <Image x:Name="img버스위치2" Width="50" Height="50" Margin="3,0,0,0" HorizontalAlignment="Center" />
                <Image x:Name="img버스위치3"
                       Width="50"
                       Height="50"
                       Margin="3,0,0,0" HorizontalAlignment="Center" />
                <Image x:Name="img버스위치4"
                       Width="50"
                       Height="50"
                       Margin="3,0,0,0" HorizontalAlignment="Center" />
                <Image x:Name="img버스위치5"
                       Width="50"
                       Height="50"
                       Margin="0,0,0,0" HorizontalAlignment="Center" />
            </StackPanel>
            <!--<Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                <TextBlock x:Name="txt현위치"
                           Text="현위치"                           
                           Width="Auto"
                           Height="Auto"                           
                           FontSize="18"
                           FontWeight="Bold"
                           FontFamily="{DynamicResource KoPubDotum}"
                           Foreground="Black" />
                --><!--<Canvas>
                    <TextBlock x:Name="txt현위치" Text="현위치" Canvas.Left="0" Width="Auto" Height="Auto" TextAlignment="Center" FontSize="18" FontWeight="Bold" FontFamily="{DynamicResource KoPubDotum}" Foreground="Black"/>
                </Canvas>--><!--
            </Grid>-->
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  >
                    <TextBlock x:Name="txt현위치"
                               Text="현위치"                                                                                      
                               FontSize="21"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               FontFamily="{DynamicResource KoPubDotum}"
                               Foreground="Black"
                               Width="Auto"/>
            </Grid>
            <Grid HorizontalAlignment="Right">
                <TextBlock x:Name="txt목적지" Text="목적지" Width="310"  FontSize="21" FontWeight="Bold" FontFamily="{DynamicResource NanumBarunGothic}" Foreground="Black" TextAlignment="Right"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>