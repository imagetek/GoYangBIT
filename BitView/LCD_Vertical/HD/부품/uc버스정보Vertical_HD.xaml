<UserControl x:Class="BitView.uc버스정보Vertical_HD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrl="clr-namespace:SSControlsNET;assembly=SSControlsNET"
             xmlns:local="clr-namespace:BitView"              
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded"
             Width="710"
             >
        <Grid x:Name="mainGrid" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
            </Grid.ColumnDefinitions>
            <Label Content="버스도착정보"
                   FontSize="24"
                   Foreground="Black"
                   FontWeight="DemiBold"
                   HorizontalContentAlignment="Center" />
        <Grid Background="LightGray"
              Height="40"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Content="종류"
                   FontSize="20"
                   FontWeight="Bold"
                   BorderThickness="0 0 1 0"
                   BorderBrush="Black"
                   Foreground="Black"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Margin="0 5"
                   />
            <Label Grid.Column="1"
                   Content="노선번호"
                   FontSize="20"
                   FontWeight="Bold"
                   BorderThickness="0 0 1 0"
                   BorderBrush="Black"
                   Foreground="Black"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Margin="0 5" />
            <Label Grid.Column="2"
                   Content="예정"
                   FontSize="20"
                   FontWeight="Bold"
                   BorderThickness="0 0 1 0"
                   BorderBrush="Black"
                   Foreground="Black"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Margin="0 5" />
            <Label Grid.Column="3"
                   Content="좌석수"
                   FontSize="20"
                   FontWeight="Bold"
                   BorderThickness="0 0 1 0"
                   BorderBrush="Black"
                   Foreground="Black"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Margin="0 5" />
            <Label Grid.Column="4"
                   Content="현재버스위치"
                   FontSize="20"
                   FontWeight="Bold"
                   BorderBrush="Black"
                   Foreground="Black"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Margin="0 5" />

        </Grid>
        <StackPanel x:Name="sp정보"
                        Grid.Row="2"
                        Visibility="Visible"
                        >
                

                <local:uc도착정보VerticalItem_HD x:Name="_u정보1"
                                      Height="110"
                                  Margin="0,5,0,0"
                                  BorderThickness="0 0 0 1"
                                      BorderBrush="Black"
                                      />
                <local:uc도착정보VerticalItem_HD x:Name="_u정보2"
                                      Height="110"
                                      Margin="0,5,0,0"
                                      BorderThickness="0 0 0 1"
                                      BorderBrush="Black" />
                <local:uc도착정보VerticalItem_HD x:Name="_u정보3"
                                  Height="110"
                                      Margin="0,5,0,0"
                                      BorderThickness="0 0 0 1"
                                      BorderBrush="Black" />
                <local:uc도착정보VerticalItem_HD x:Name="_u정보4"
                                  Height="110"
                                      Margin="0,5,0,0"
                                      BorderThickness="0 0 0 1"
                                      BorderBrush="Black" />
                <local:uc도착정보VerticalItem_HD x:Name="_u정보5"
                                  Height="110"
                                      Margin="0,5,0,0"
                                      BorderThickness="0 0 0 1"
                                      BorderBrush="Black" />
                <!--<local:uc도착정보HItem_HD x:Name="_u정보6" Width="680" Height="110" Margin="0,10,0,0" />-->
            </StackPanel>

        <StackPanel x:Name="busAndRoute"
                    Grid.Row="2"
                    Visibility="Visible">


            <local:uc도착정보VerticalItem_HD x:Name="busArrival"
                                         Height="110"
                                         Margin="0,5,0,0"
                                         BorderThickness="0 0 0 1"
                                         BorderBrush="Black" />
            <Canvas x:Name="RouteCanvas"
                    Background="White"
                    Panel.ZIndex="100"
                    Height="470" />
            <!--<local:uc도착정보HItem_HD x:Name="_u정보6" Width="680" Height="110" Margin="0,10,0,0" />-->
        </StackPanel>

        <TextBlock Grid.Row="2"
                   x:Name="txt메세지"
                       Text="통신 복구 작업 중입니다"
                       Height="Auto"
                        Width="Auto"
                       TextAlignment="Center"
                       FontSize="40pt"
                       FontWeight="Bold"
                       FontFamily="{DynamicResource KoPubDotum}"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        
            
        </Grid>
    
</UserControl>