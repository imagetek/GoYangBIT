                            </StackPanel>-->
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="디버그 로그 :" Width="100" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}" />
                                <CheckBox x:Name="chkUSE_DEBUG_LOG" Content="체크시 사용" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />                                
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="PC재부팅 :" Width="100" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}" />
                                <CheckBox x:Name="chkUSE_REBOOT" Content="체크시 사용" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                                <TextBox Name="txtREBOOT_TIME" Text="" Width="80" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" ctrls:TextBoxMaskBehavior.Mask="Integer"/>
                                <TextBlock Text="(HHmm형태로 입력)" Width="Auto" Margin="1,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="시간동기화 :" Width="100" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}" />
                                <CheckBox x:Name="chkUSE_SYNC_TIME" Content="체크시 사용" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                                <TextBox Name="txtSYNC_URL" Width="300" Margin="5,0,0,0" TextAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_A}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="로컬컨텐츠 재생 :" Width="100" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}" />
                                <CheckBox x:Name="chkUSE_LOCAL_MEDIA" Content="체크시 사용" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                            </StackPanel>
                            <!--<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="로컬컨텐츠 재생 :" Width="100" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B2}" />
                                <CheckBox x:Name="chkUSE_LOCAL_MEDIA" Content="체크시 사용" Width="Auto" Height="Auto" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                            </StackPanel>-->
                        </StackPanel>
                    </GroupBox>                    
                </StackPanel>
            </TabItem>
