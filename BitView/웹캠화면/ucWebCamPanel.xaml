<UserControl x:Class="PAJUBitView.ucWebCamPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrls="clr-namespace:SSControls;assembly=SSControls"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:PAJUBitView"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="900" 
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                <TextBlock Text="카메라1번 (화면저장) :" Width="Auto" Margin="5,0,0,0" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                <ComboBox x:Name="cmbWebCam1" Width="150" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <ComboBox x:Name="cmbCAM_NO1_ROTATE" Width="80" Height="20" Margin="5,0,0,0" MaxDropDownHeight="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Button x:Name="btn1번연결" Content="연결" Width="60" Height="20" Margin="5,0,0,0" Click="btn1번연결_Click"/>
                <Button x:Name="btn1번해제" Content="해제" Width="60" Height="20" Margin="5,0,0,0" Click="btn1번해제_Click"  />
            </StackPanel>
            <ctrls:ssWebcamPlayer x:Name="webcam1" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                <TextBlock Text="카메라 2번 (충격용) :" Width="Auto" Margin="5,0,0,0" TextAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource COLOR_FONT_B1}" />
                <ComboBox x:Name="cmbWebCam2" Width="150" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <ComboBox x:Name="cmbCAM_NO2_ROTATE" Width="80" Height="20" Margin="5,0,0,0" MaxDropDownHeight="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Button x:Name="btn2번연결" Content="연결" Width="60" Height="20" Margin="5,0,0,0" Click="btn2번연결_Click"/>
                <Button x:Name="btn2번해제" Content="해제" Width="60" Height="20" Margin="5,0,0,0" Click="btn2번해제_Click"  />
                <Button x:Name="btn충격영상" Content="충격영상" Width="60" Height="20" Margin="5,0,0,0" Click="btn충격영상_Click"  />
            </StackPanel>
            <ctrls:ssWebcamPlayer x:Name="webcam2" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>
