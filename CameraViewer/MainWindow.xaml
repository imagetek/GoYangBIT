<Window x:Class="CameraViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CameraViewer"
        mc:Ignorable="d"
        Title="MainWindow"
        MinWidth="800"
        MinHeight="650"
        Height="650"
        Width="800">
    <StackPanel VerticalAlignment="Top">
        <Border x:Name="videoBorder"
                BorderBrush="Black"
                
                Width="640"
                Height="480"
                Margin="20">
            <Canvas Background="LightGray">
                <Image x:Name="mediaElem"
                       Visibility="Collapsed" />
            </Canvas>

        </Border>

        <Canvas Width="300"
                Height="40">
            <TextBlock Text="Video Device: "
                       FontSize="20"
                       Padding="0"
                       Margin="0"
                       Canvas.Left="0"
                       Canvas.Top="0"
                       Height="25" />
            <TextBlock x:Name="selectedCamera"
                       FontSize="20"
                       Canvas.Left="140"
                       Padding="0"
                       Margin="0"
                       Canvas.Top="0"
                       Height="25" />
            <Button x:Name="populateCameraBtn"
                    Content="Load camera"
                    FontSize="16"
                    Width="120"
                    Height="25"
                    Click="populateCameraBtn_Click"
                    Canvas.Left="170" />
        </Canvas>
        <Canvas x:Name="buttonCanvas"
                Width="250"
                Height="24">
            <Button Content="Start View"
                    x:Name="startBtn"
                    Height="24"
                    Width="100"
                    HorizontalAlignment="Right"
                    Click="StartCaptureButton_Click" />

            <Button Content="Stop View"
                    x:Name="stopBtn"
                    Canvas.Left="150"
                    Height="24"
                    Width="100"
                    HorizontalAlignment="Left"
                    Click="StopCaptureButton_Click" />
        </Canvas>
    </StackPanel>
</Window>
