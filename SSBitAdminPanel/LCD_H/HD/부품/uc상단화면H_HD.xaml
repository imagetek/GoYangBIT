                       HorizontalContentAlignment="Center"
                       FontWeight="Bold"
                       />

            </StackPanel>
        </Border>
        
        <StackPanel Width="710"
                    Height="45"
                    Background="White"
                    Orientation="Horizontal">
            <!--<StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="710"
                        Height="45">-->
