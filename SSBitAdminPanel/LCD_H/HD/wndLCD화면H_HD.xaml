<Window x:Class="SSBitUI.wndLCD화면H_HD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSBitUI"
        mc:Ignorable="d"
        Title="LCD세로형"
        Height="1280"
        Width="720"
        ShowInTaskbar="True"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Closing="Window_Closing"        
       WindowStartupLocation="Manual"
        Topmost="True"
        Left="0"
        Top="0"
        MouseDoubleClick="Window_MouseDoubleClick">
    <!--ResizeMode="NoResize" WindowStyle="None"-->
    <Border BorderBrush="Black" BorderThickness="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="130" />
                <RowDefinition Height="660" />
                <RowDefinition Height="380" />
            </Grid.RowDefinitions>

            <local:uc상단화면H_HD x:Name="_u상단"
                              Grid.Row="0"                               />
            <local:uc곧도착화면H_HD x:Name="_u도착"
                               Grid.Row="1" />
            <local:uc버스정보창H_HD x:Name="_u정보"
                               Grid.Row="2" />
            <local:uc하단화면H_HD x:Name="_u하단"
                              Grid.Row="3"
                               />



        </Grid>
    </Border>
   
</Window>
