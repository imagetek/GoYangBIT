<Window x:Class="SSControlsNET.wndMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SSControlsNET"
        Loaded="Window_Loaded" Closing="Window_Closing" Style="{DynamicResource wDialogStyleNoButtons}"
        FontSize="13" Topmost="true" Foreground="{DynamicResource COLOR_FONT_A}"
        FontFamily="{DynamicResource NanumBarunGothic}" Title="메세지창" Height="250" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="39"/>
        </Grid.RowDefinitions>
        <Grid Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <TextBlock x:Name="txtMessage" Foreground="{DynamicResource COLOR_FONT_A}" FontSize="18"
                 Text="선택한 그룹은 장치를 포함하고 있습니다. 먼저 포함된 장치를 전부 삭제하세요." VerticalAlignment="Center"
                 TextAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
        <Rectangle Fill="{DynamicResource COLOR_구분선G}" Grid.Row="1"/>
        <Button Click="btn확인_Click" x:Name="btn확인" Style="{DynamicResource ssStyleBlueButton}" Content="확인"
            Grid.Row="6" Width="80" Margin="0,0,10,0" Height="30" VerticalAlignment="Center"
            HorizontalAlignment="Center"/>
    </Grid>
</Window>
