<Window x:Class="SSControlsNET.wndTouchQuestionCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SSControlsNET"
        Loaded="Window_Loaded" Closing="Window_Closing" Style="{DynamicResource wDialogStyleNoButtons}"
        Foreground="{DynamicResource COLOR_FONT_A}" Title="확인" Height="395" Width="750" Topmost="true">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtMessage" Foreground="{DynamicResource COLOR_FONT_A}" FontSize="22pt"
               Text="선택한 장치를 삭제하시겠습니까?" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <Rectangle Fill="{DynamicResource COLOR_구분선G}" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="btn확인_Click" x:Name="btn확인" Style="{DynamicResource ssStyleBlueButton}" Content="확인"
              Width="120" Height="50" Margin="0,0,10,0" FontSize="18pt" VerticalAlignment="Center"
              HorizontalAlignment="Center"/>
            <Button Click="btn취소_Click" x:Name="btn취소" Style="{DynamicResource ssStyleBlueButton}" Content="취소"
              Width="120" Height="50" Margin="0,0,10,0" FontSize="18pt" VerticalAlignment="Center"
              HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
