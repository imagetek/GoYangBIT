<Window x:Class="SSControlsNET.wndQuestionCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SSControlsNET"
        Loaded="Window_Loaded" Closing="Window_Closing" Style="{DynamicResource wDialogStyleNoButtons}"
        FontSize="13" Foreground="{DynamicResource COLOR_FONT_A}"
        FontFamily="{DynamicResource NanumBarunGothic}" Title="확인" Height="250" Width="500" Topmost="true">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="39"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtMessage" Foreground="{DynamicResource COLOR_FONT_A}" FontSize="18"
               Text="선택한 장치를 삭제하시겠습니까?" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <Rectangle Fill="{DynamicResource COLOR_구분선G}" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="btn확인_Click" x:Name="btn확인" Style="{DynamicResource ssStyleBlueButton}" Content="확인"
              Width="80" Margin="0,0,5,0" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Click="btn취소_Click" x:Name="btn취소" Style="{DynamicResource ssStyleBlueButton}" Content="취소"
              Width="80" Margin="0,0,5,0" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
