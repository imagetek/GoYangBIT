<Window x:Class="SSWebcamPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:SSWebcamPlayer"
       mc:Ignorable="d" Title="SSWebcamPlayer" Height="400" Width="650" Icon="WEBCAM.ico"
        ShowInTaskbar="True" WindowStartupLocation="Manual" ResizeMode="NoResize" WindowStyle="None" 
        Loaded="Window_Loaded" Closing="Window_Closing" Closed="Window_Closed" >
    <Grid>
        <Border Background="{DynamicResource COLOR_배경}" BorderThickness="2" BorderBrush="{DynamicResource COLOR_외각선}" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="1" />
                    <RowDefinition />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <ContentControl MouseDoubleClick="ContentControl_MouseDoubleClick">
                    <Grid Background="{DynamicResource COLOR_배경}" MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseMove="Grid_MouseMove" MouseLeftButtonUp="Grid_MouseLeftButtonUp">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="1" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,0,0,0">
                            <Image Source="/SSWebcamPlayer;component/WEBCAM.ico" VerticalAlignment="Center" Width="24" Stretch="Uniform" />
                            <TextBlock x:Name="txt제목" TextWrapping="NoWrap" Foreground="{DynamicResource COLOR_FONT_A}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,50,0"  />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0">
                            <Button x:Name="btnMinimize" Width="18" Height="18" VerticalAlignment="Center" Margin="5,0,0,0" Click="btnMinimize_Click" Focusable="False">
                                <Grid HorizontalAlignment="Center">
                                    <Line Stroke="{DynamicResource COLOR_FONT_A}" StrokeThickness="2" X1="0" Y1="9" X2="10" Y2="9" />
                                </Grid>
                            </Button>
                            <Button x:Name="btnMaximize" Width="18" Height="18" VerticalAlignment="Center" Margin="5,0,0,0" Click="btnMaximize_Click"  Focusable="False">
                                <Grid HorizontalAlignment="Center">
                                    <Border x:Name="icNormal" BorderBrush="{DynamicResource COLOR_FONT_A}" BorderThickness="1,2,1,1" Width="10" Height="10" />
                                    <Grid x:Name="icMaximize" Visibility="Collapsed">
                                        <Border BorderBrush="{DynamicResource COLOR_FONT_A}" BorderThickness="1,2,1,1" Width="7" Height="7" Margin="3,-3,0,0" />
                                        <Border BorderBrush="{DynamicResource COLOR_FONT_A}" Background="{DynamicResource COLOR_배경}"  BorderThickness="1,2,1,1" Width="7" Height="7" Margin="-3,3,0,0" />
                                    </Grid>
                                </Grid>
                            </Button>
                            <Button x:Name="btnMainClose" Width="18" Height="18" VerticalAlignment="Center" Margin="5,0,0,0" Click="btnMainClose_Click"  Focusable="False">
                                <Grid HorizontalAlignment="Center">
                                    <Line Stroke="{DynamicResource COLOR_FONT_A}" StrokeThickness="2" X1="0" Y1="0" X2="10" Y2="9" />
                                    <Line Stroke="{DynamicResource COLOR_FONT_A}" StrokeThickness="2" X1="10" Y1="0" X2="0" Y2="9" />
                                </Grid>
                            </Button>
                        </StackPanel>
                        <Rectangle Fill="{DynamicResource COLOR_구분선B}" Grid.Row="1" />
                        <Rectangle Fill="{DynamicResource COLOR_구분선C}" Grid.Row="2"  />
                    </Grid>
                </ContentControl>
                <Rectangle Fill="{DynamicResource COLOR_구분선B}" Grid.Row="1" />
                <Rectangle Fill="{DynamicResource COLOR_구분선G}" Grid.Row="1" />
                <Grid Grid.Row="2" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="카메라1번 :" Width="Auto" Margin="5,0,0,0" TextAlignment="Right" VerticalAlignment="Center"  />
                                <ComboBox x:Name="cmbWebCam1" Width="150" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                                <ComboBox x:Name="cmbCAM_NO1_ROTATE" Width="80" Height="20" Margin="5,0,0,0" MaxDropDownHeight="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Center">
                                <Button x:Name="btn1번연결" Content="연결" Width="60" Height="20" Margin="5,0,0,0" Click="btn1번연결_Click"/>
                                <Button x:Name="btn1번해제" Content="해제" Width="60" Height="20" Margin="5,0,0,0" Click="btn1번해제_Click"  />
                            </StackPanel>
                        </StackPanel>
                        <local:ssWebcamPlayer x:Name="webcam1" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="카메라2번 :" Width="Auto" Margin="5,0,0,0" TextAlignment="Right" VerticalAlignment="Center"  />
                                <ComboBox x:Name="cmbWebCam2" Width="150" Height="20" Margin="5,0,0,0" MaxDropDownHeight="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                                <ComboBox x:Name="cmbCAM_NO2_ROTATE" Width="80" Height="20" Margin="5,0,0,0" MaxDropDownHeight="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Center">
                                <Button x:Name="btn2번연결" Content="연결" Width="60" Height="20" Margin="5,0,0,0" Click="btn2번연결_Click"/>
                                <Button x:Name="btn2번해제" Content="해제" Width="60" Height="20" Margin="5,0,0,0" Click="btn2번해제_Click"  />
                                <Button x:Name="btn충격영상" Content="충격영상" Width="60" Height="20" Margin="5,0,0,0" Click="btn충격영상_Click"  />
                            </StackPanel>
                        </StackPanel>
                        <local:ssWebcamPlayer x:Name="webcam2" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="3" x:Name="gridGrip" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="20" Height="20" Cursor="SizeNWSE" Background="#02000000" MouseLeftButtonDown="gridGrip_MouseLeftButtonDown" MouseMove="gridGrip_MouseMove" MouseLeftButtonUp="gridGrip_MouseLeftButtonUp">
                    <Image Source="/SSWebcamPlayer;component/Resource/그립아이콘B.png" Stretch="Fill" />
                </Grid>
                <StackPanel Grid.Row="3" Orientation="Horizontal">

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>